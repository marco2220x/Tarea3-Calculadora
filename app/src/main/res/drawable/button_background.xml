<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del botón -->
    <solid android:color="#A682CA"/> <!-- Cambia el color de fondo si lo deseas -->

    <!-- Bordes redondeados -->
    <corners android:radius="1000dp"/> <!-- El radio más alto hace el botón más redondo -->

    <!-- Añade un borde alrededor del botón -->
    <stroke
        android:width="2dp"
        android:color="#BCCCD3"/> <!-- Color del borde -->

    <!-- Añade padding interno -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>
</shape>
